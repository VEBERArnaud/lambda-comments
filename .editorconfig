# EditorConfig is awesome: http://EditorConfig.org
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf

indent_style = space
indent_size = 2

insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
indent_size = 4
